<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.fashionmen">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".FashionMenApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".activities.purchaseMade.ActivityPurchaseMade"></activity>
        <activity
                android:name=".activities.productDetail.ActivityProductDetail"
                android:screenOrientation="nosensor"></activity>
        <activity
                android:name=".activities.Main.MainActivity"
                android:screenOrientation="nosensor"
                android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>